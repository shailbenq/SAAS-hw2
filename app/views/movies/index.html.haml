%h2 All Movies

%table#movies
  %thead
    %tr
      %th{:class => ('hilite' if @sort == 'title') }
        = link_to 'Movie Title', movies_path(:sort_param => 'title')
      %th{:class => ('hilite' if @sort == 'release_date') }
        = link_to 'Release Date', movies_path(:sort_param => 'release_date')
      %th Release Date
      %th More Info
      %th Edit Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie) 
        %td= link_to "Edit Movie", edit_movie_path(movie)

= link_to 'ADD NEW MOVIE', new_movie_path
